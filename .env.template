# AutoArchitect Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ======================
# API Keys (Required)
# ======================

# Google Gemini API Key
# Get your key from: https://makersuite.google.com/app/apikey
API_KEY=your_gemini_api_key_here

# ======================
# Application Settings
# ======================

# Node environment: development, production, staging
NODE_ENV=production

# Application port (for Docker deployment)
PORT=3000

# ======================
# Feature Flags (Optional)
# ======================

# Enable debug logging
DEBUG=false

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable cache
ENABLE_CACHE=true

# Cache TTL in milliseconds (default: 5 minutes)
CACHE_TTL=300000

# Maximum cache size (default: 100 items)
CACHE_MAX_SIZE=100

# ======================
# Security Settings (Optional)
# ======================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ======================
# Observability (Optional)
# ======================

# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Maximum log entries in memory
MAX_LOG_ENTRIES=1000

# ======================
# Notes
# ======================

# For local development, you can use the built-in Terminal view
# to set API keys using: set-key gemini YOUR_KEY
# Keys are stored locally in IndexedDB with obfuscation

# For production deployment, set environment variables in your
# hosting platform (Docker, Kubernetes, Cloud Run, etc.)
